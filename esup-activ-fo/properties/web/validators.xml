<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
	>

	<!-- 
		/properties/web/validators.xml
		This file declares the validators used by the web interface.
		It should not be modified but by the developers.
		This file is referenced by /properties/applicationContext.xml.
	-->

	<bean 
		id="validator"
		class="org.esupportail.activfo.web.validators.Validator"
		parent="abstractI18nAwareBean"
		>
    	<description>
			A validator for forms objects.
    	</description>
    	
    	
	</bean>
	
	<bean 
		id="validatorDisplayName"
		class="org.esupportail.activfo.web.validators.ValidatorDisplayName"
		parent="abstractI18nAwareBean"
		>
    	<description>
			A validator for DisplayName.
    	</description>
    	
    	
	</bean>
	
	<bean 
		id="validatorEmail"
		class="org.esupportail.activfo.web.validators.ValidatorEmail"
		parent="abstractI18nAwareBean"
		>
    	<description>
			A validator for Email
    	</description>
    	
    	
	</bean>
	
	<bean 
		id="validatorMobilePhone"
		class="org.esupportail.activfo.web.validators.ValidatorMobilePhone"
		parent="abstractI18nAwareBean"
		>
    	<description>
			A validator for Mobile.
    	</description>
    	
    	
	</bean>
	
	
	
	

</beans>

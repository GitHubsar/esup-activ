<?xml version="1.0" encoding="UTF-8" ?>

<beans 
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd"
	>

	<bean
		id="domainService"
		class="org.esupportail.activbo.domain.DomainServiceImpl"
		>
		<property name="daoService" ref="daoService" />
		<property name="ldapUserService" ref="ldapUserService" /> 
		<property name="writeableLdapUserService" ref="writeableLdapUserService" />
		<property name="displayNameLdapAttribute" value="displayName" />
		
		<property name="accountDescrIdKey" value="${ldap.attribute.uid}"/>
		
		<property name="accountDescrCodeKey" value="${account.key.code}"/>
		
		<property name="hashCodeCodeKey" value="${access.code.key}"/>
		<property name="hashCodeDateKey" value="${access.date.key}"/>
		
		<property name="hashCode" ref="hashCode"/>
		
		<property name="ldapSchema" ref="ldapSchema"/>
		
		<property name="formatDateConv" value="${access.date.format}"/>
		
		<property name="krbLdapMethod" value="${kerberos.ldap.method}" />
		<property name="krbHost" value="${kerberos.host}" />
		
		<property name="kerberosAdmin" ref="KRBAdminService" />
		
		<property name="clean" ref="cleaningHashCode" />
		
		<property name="accessCodeDelay" value="${access.code.delay}" />
		
		<property name="cleValidationPers" value="${ldap.attribute.employeeId}" />
		
		<property name="cleValidationEtu" value="${ldap.attribute.studentId}" />
				
		<property name="smtpService" ref="smtpService" />
		
		<property name="mailCodeSubject" value="${smtp.mailcode.subject.french}" />
		<property name="mailCodeBody" value="${smtp.mailcode.body.french}" />
			
	</bean>
		
	<bean
		id="hashCode"
		class="org.esupportail.activbo.domain.beans.HashCode"
		>
	</bean>
	

</beans>
